<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="container">
      <h2 style="text-align: center">Intern</h2>
      <div>
        <div
          style="
            float: left;
            padding: 10px;
            margin: 5px;
            border-radius: 5px;
            background-color: rgb(117, 246, 255);
          "
        >
          <a href="/user">ADD DATA</a>
        </div>
        <div
          style="
            float: right;
            padding: 10px;
            margin: 5px;
            border-radius: 5px;
            background-color: rgb(99, 241, 43);
          "
        >
          <a href="/exportcsv"> Export Data in CSV</a>
        </div>
      </div>
      <br />
      <br />
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Operations</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user=>{%>

          <tr>
            <td><%= user._id %></td>
            <td><%= user.name %></td>
            <td><%= user.phone %></td>
            <td><%= user.address %></td>
            <td>
              <button><a href="/user/<%= user._id %>/edit">Update</a></button>
              <form
                style="display: inline"
                action="/user/<%= user._id %>/delete"
                method="post"
              >
                <input type="submit" value="Delete" />
              </form>
            </td>
          </tr>
          <%}) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
